#include<iostream>
#include<algorithm>
#include<string>
#include<vector>
using namespace std;
int main()
{

    string s1 = "11000010001";
    int n=s1.length();
    int dp[n];
    for(int i=0;i<s1.length();i++)
    {
        dp[i]=(s1[i]=='0')?1:-1;
    }
    int curr=dp[0];
    int ans=dp[0];
    for(int i=1;i<n;i++)
    {
        curr=max(dp[i],curr+dp[i]);
        ans=max(ans,curr);
    }
    cout<<ans;
    return 0;
}
