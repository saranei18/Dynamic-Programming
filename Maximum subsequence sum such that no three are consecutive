#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;

int counts=0;

int main()
{
    vector<int>nums{3000, 2000, 1000, 3, 10};
    int n=nums.size();

    int sum[n];
    for(int i=0;i<n;i++)sum[i]=0;
    if(n>=1)
        sum[0]=nums[0];
    if(n>=2)
        sum[1]=nums[0]+nums[1];
    if(n>2)
        sum[2]=max(sum[1],max(nums[0]+nums[2],nums[1]+nums[2]));

    for(int i=3;i<n;i++)
    {
        sum[i]=max(sum[i-1],max(sum[i-2]+nums[i],sum[i-3]+nums[i-1]+nums[i]));
    }
    cout<<sum[n-1];

}
