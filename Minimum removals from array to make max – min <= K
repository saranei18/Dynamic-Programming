#include<iostream>
#include<vector>
#include<algorithm>
#include<string>
using namespace std;

int helper(vector<int>&nums,int i,int j,int k)
{
    if(i>=j)return 0;

    else if(nums[j]-nums[i]<k)
        return 0;
    else if(nums[j]-nums[i]>k)
        return 1+min(helper(nums,i+1,j,k),helper(nums,i,j-1,k));

}
int main()
{
    int k=4;
    vector<int>nums{ 1, 3, 4, 9, 10, 11, 12, 17, 20 };
    cout<<helper(nums,0,nums.size()-1,k);
    return 0;
}
