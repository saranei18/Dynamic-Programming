#include<iostream>
#include<algorithm>
#include<string>
#include<vector>
using namespace std;
int main()
{
    vector<int>nums{ 3, 5, 10, 15, 17, 12, 9 };
    int k=4;
    sort(nums.begin(),nums.end());
    int sum=0;

    for(int i=nums.size()-1;i>0;i--)
    {
        if(nums[i]-nums[i-1]<k)
        {
            sum+=nums[i];
            sum+=nums[i-1];
            i--;
        }
    }
    cout<<sum;
    return 0;
}
